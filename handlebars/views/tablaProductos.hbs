
<div class="container">
    <h1>Lista de Productos</h1>
    {{#if prods}}         
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
        </thead>
        <tbody>
            {{#each prods}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td><img src="{{url}}" alt="{{title}}"></td>
        </tr>
       
        {{/each}}
        </tbody>
    </table>
  {{else}}
    <div>
        <p>No hay productos</p>
    </div>
{{/if}}
<div class="col-sm-4">
    <a href="/" type="button" class="btn btn-primary">Formulario</a>
</div>
</div>
